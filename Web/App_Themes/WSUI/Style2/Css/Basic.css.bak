.fixWidth{
	height:24px;
	overflow:hidden;
	line-height:24px;
}
.fixWidth2{
	height:20px;
	overflow:hidden;
	line-height:22px;
}

/*控制td固定宽度*/
.TableFix{
	table-layout:fixed;
}

/*  浮动  */
.DivFloatLeft {
	float: left;
}
.DivFloatRight {
	float: right;
	text-align: right;
}
.Floatleft{
	float: left;
}
.Floatright{
	float: right;
}